{
	"manifest_version": 2,
	"name": "Research App",
	"description": "This extension opens a notepad and other research resources/tools on the right side of the screen.",
	"version": "0.3.1",

	"browser_action": { },

	"permissions": ["tabs", "webNavigation", "storage"],
	"background": {"scripts": ["background.js"], "persistent": false},

	"content_scripts": [
	{
		"matches": ["<all_urls>"],
		"js": ["research.js", "jquery.js"]
	}
	],

	"web_accessible_resources": [
	"sidebar.html",
	"sidebarStyle.css",
	"sidebarJS.js",
	"toolkitJS.js",
	"toolkitStyle.css",
	"sidebar_jquery.js"
	]
}